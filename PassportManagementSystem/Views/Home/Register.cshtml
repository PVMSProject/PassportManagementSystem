@model PassportManagementSystem.Models.UserRegistration
@{
    ViewBag.Title = "Register";
    PassportManagementSystem.Models.UserRegistration userdata = (PassportManagementSystem.Models.UserRegistration)ViewBag.data;
}
<h3 class="title-register">New User Registration</h3>
<div style="float:right;color:red;font-weight:bold">* All Fields are Required</div>
<div class="register-form">
    @using (Html.BeginForm())
    {

        <div class="div-left">
            <div class="form-group">
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", @placeholder = "First Name *" })
                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.SurName, new { @class = "form-control", @placeholder = "Sur Name *" })
                @Html.ValidationMessageFor(a => a.SurName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.DateOfBirth, new { @class = "form-control", @placeholder = "Date of Birth  DD/MM/YYYY *" })
                @Html.ValidationMessageFor(a => a.DateOfBirth, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(a => a.Address, new { @class = "form-control", @placeholder = "Address *", @rows = "3" })
                @Html.ValidationMessageFor(a => a.Address, "", new { @class = "text-danger" })
            </div>
            <fieldset>
                <legend>Gender *</legend>
                <p style="float:left;margin-left:25%;">@Html.RadioButtonFor(a => a.Gender, "Male", new { @class = "form-check-input" })Male</p>
                <p style="float:right;margin-right:20%;">@Html.RadioButtonFor(a => a.Gender, "Female", new { @class = "form-check-input" })Female</p>
            </fieldset>
            @Html.ValidationMessageFor(a => a.Gender,"", new { @class = "text-danger" })
        </div>

        <div class="div-right">
            <div class="form-group">
                @Html.TextBoxFor(a => a.ContactNumber, new { @class = "form-control", @placeholder = "Contact Number *", @type = "number" })
                @Html.ValidationMessageFor(a => a.ContactNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", @placeholder = "EmailID  abc@gmail.com*" })
                @Html.ValidationMessageFor(a => a.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.Qualification, new { @class = "form-control", @placeholder = "Qualification *" })
                @Html.ValidationMessageFor(a => a.Qualification, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(a => a.ApplyType, new List<SelectListItem> {
                           new SelectListItem { Value = "Passport" , Text = "Passport" },
                           new SelectListItem { Value = "Visa" , Text = "Visa" }
                        }, "-- Select ApplyType -- *", new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ApplyType, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(a => a.HintQuestion, new List<SelectListItem> {
                           new SelectListItem { Value = "What is your Pet name ?" , Text = "What is your Pet name ?" },
                           new SelectListItem { Value = "What is your Mother's name ?" , Text = "What is your Mother's name ?" },
                           new SelectListItem { Value = "What is your Favourite Movie ?" , Text = "What is your Favourite Movie ?" }
                        }, "-- Select Hint Question -- *", new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.HintQuestion, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(a => a.HintAnswer, new { @class = "form-control", @placeholder = "Answer the above Hint Question *" })
                @Html.ValidationMessageFor(a => a.HintAnswer, "",new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-primary" value="Register" style="float:right;margin-right:37%;margin-top:5%;" />
        </div>
        if (userdata != null)
        {
            <div class="alert alert-dismissible alert-success" style="position:absolute;margin:32% 15% 0% 17%;width:40%;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <p>Dear User,</p>
                <p>Your User Id is <span style="color:mediumblue">@userdata.UserID</span> and your password is <span style="color:mediumblue">@userdata.Password</span>.</p>
                <p>You are planning for <span style="color:mediumblue">@userdata.ApplyType</span> and your citizen type is <span style="color:mediumblue">@userdata.CitizenType</span>.</p>
            </div>
        }
    }
</div>
