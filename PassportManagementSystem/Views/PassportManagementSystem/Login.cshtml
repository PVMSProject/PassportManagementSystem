@model PassportManagementSystem.Models.UserRegistration
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "PassportManagementSystem"))
{
    <center>
        <h2 style="margin-top:3%;margin-bottom:3%;">Login</h2>
        <div class="form-group">
            @Html.TextBoxFor(a => a.UserID, new { @class = "form-control", @placeholder = "User ID *", @onblur = "getContact();" })
            @Html.ValidationMessageFor(a => a.UserID, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.ContactNumber, new { @class = "form-control", @placeholder = "Contact Number *", @readonly = "true" })
            @Html.ValidationMessageFor(a => a.ContactNumber, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Password *" })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
        </div>
        <input type="submit" class="btn btn-primary" value="Login" style="margin-bottom:3%" />
        @if (ViewBag.error != null)
        {
            <div class="alert alert-dismissible alert-danger" style="width:32%;margin-bottom:3%;padding-left:3%;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@ViewBag.error</strong>
            </div>
        }
    </center>
}
<script>
    function getContact()
    {
        var userid = document.getElementById("UserID").value;
        if (userid.length!=0)
            window.location.href = "/PassportManagementSystem/GetContactNumber?uid=" + userid;
    }
</script>

